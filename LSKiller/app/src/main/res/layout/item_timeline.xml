<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:apps="http://schemas.android.com/tools"
    android:id="@+id/swipeMenu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:gravity="center"
        android:tag="swipe_menu_left">

        <ImageView
            android:id="@+id/goProfile"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:background="@drawable/ripple_effect"
            android:src="@drawable/ic_person"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="210dp"
        android:layout_height="match_parent"
        android:gravity="right"
        android:tag="swipe_menu_right">

        <ImageView
            android:id="@+id/reply"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@drawable/ripple_effect"
            android:padding="15dp"
            android:src="@drawable/ic_reply"/>

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:src="@drawable/divider_style"/>

        <ImageView
            android:id="@+id/reTweet"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@drawable/ripple_effect"
            android:padding="15dp"
            android:src="@drawable/ic_retweet"/>

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:src="@drawable/divider_style"/>

        <ImageView
            android:id="@+id/favorite"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@drawable/ripple_effect"
            android:padding="15dp"
            android:src="@drawable/ic_fav"/>

    </LinearLayout>

    <RelativeLayout
        style="@style/RecyclerStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        android:padding="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignStart="@+id/name"
            android:layout_below="@+id/name"
            android:paddingTop="5dp"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/colorText"
            apps:text="名前入ります"/>

        <TextView
            android:id="@+id/screen_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_toEndOf="@+id/name"
            android:textColor="@color/colorSecondPrimary"
            apps:text="\uFF20gabu"/>

        <TextView
            android:id="@+id/createTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/text"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="8dp"
            android:textColor="@color/colorSecondPrimary"
            apps:text="投稿時間"/>

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_toEndOf="@+id/icon"
            android:autoLink="web"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:textColor="@color/colorText"
            apps:text="本文本文本文本文本文本文本文本文本文本文"/>

        <!--2x2のグリッドレイアウト-->
        <GridLayout
            android:id="@+id/grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text"
            android:layout_toEndOf="@+id/icon"
            android:columnCount="2"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:rowCount="2">

        </GridLayout>

        <TextView
            android:id="@+id/reTweetedUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/colorSecondPrimary"
            android:textSize="12sp"/>

    </RelativeLayout>
</com.daimajia.swipe.SwipeLayout>
